---
import HeaderLink from "./HeaderLink.astro";
import Logo from "./Logo.astro";
import ThemeToggle from "./ThemeToggle";
import { AnimatedHeader } from "./animated/header";
import BreadcrumbDynamic from "./BreadCrumbDynamic";
---

<AnimatedHeader
  client:only="react"
  className="flex justify-center items-center mx-auto py-5 sticky top-0 w-full max-w-5xl z-10 "
>
  <nav
    class="w-full px-2 sm:px-3 py-1 flex justify-between flex-row items-center backdrop-blur-md"
  >
    <BreadcrumbDynamic client:load />
    <div class="p-1 flex items-center rounded-full">
      <ThemeToggle client:load />
    </div>
  </nav>
</AnimatedHeader>
