---
import { projects } from "../consts";
import Project from "./Project.astro";

---
<section class="mt-20">
  <h1 class="font-black lg:text-left text-4xl lg:text-7xl my-4 text-slate-700 dark:text-darkText">
    Selected Projects
  </h1>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
    {
      projects.map(post => (
        <Project project={post} />
      ))
    }
  </div>
</section>