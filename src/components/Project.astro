---
import Badge from "./Badge.astro";

const { project } = Astro.props;

interface TechnologyProps {
  name: string;
  img: string;
}
---

<span
  class="flex items-center bg-iris/5 ring-astro-blue/20 hover:bg-astro-blue/10 hover:ring-astro-blue text-text backdrop-blur-sm shadow-none ring-2 px-2 py-0 sm:gap-4 sm:p-5 hover:shadow-xl hover:shadow-astro-blue/50 rounded-lg transition-all ease-in-out duration-500 max-w-3xl"
>
  <div class="flex flex-col items-center gap-2 w-full">
    <figure class="p-3 flex justify-center">
      <img src={project.img.src} alt="Wordle" class="max-w-[450px] z-100" />
    </figure>
    <div class="w-full px-3 ">
      <h4
        class="font-black text-left mt-1 text-4xl text-slate-700 dark:text-darkText"
      >
        {project.name}
      </h4>
    </div>
    <div class="px-3">
      <p class="text-sm text-surface/80 dark:text-darkText">
        {project.desc}
      </p>
      <div class="flex w-full mt-4 gap-x-4">
        {
          project.technologies.map((item: TechnologyProps) => (
            <Badge data={item} />
          ))
        }
      </div>
    </div>
  </div>
</span>
